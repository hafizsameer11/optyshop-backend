# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Prisma uses DATABASE_URL - format: mysql://user:password@host:port/database
DATABASE_URL=mysql://root:password@localhost:3306/optyshop
# Legacy DB config (optional, for reference)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=optyshop
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=optyshop-uploads

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@optyshop.com

# Payment Gateway Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Rate Limiting
# Set RATE_LIMIT_ENABLED=false to disable rate limiting completely
RATE_LIMIT_ENABLED=true
# Window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window (default: 10000 for dev, 1000 for prod)
# Set to a very high number (e.g., 100000) to effectively disable
RATE_LIMIT_MAX_REQUESTS=10000

# Auth Endpoint Rate Limiting (more lenient for /api/auth endpoints)
# Window in milliseconds (default: 900000 = 15 minutes)
AUTH_RATE_LIMIT_WINDOW_MS=900000
# Max requests per window for auth endpoints (default: 50000 for dev, 5000 for prod)
# Auth endpoints like /api/auth/me are called frequently, so they need higher limits
AUTH_RATE_LIMIT_MAX_REQUESTS=50000

# Security Settings
# WARNING: Only set to 'true' in development/testing environments
# Allows public registration to create admin users (SECURITY RISK in production!)
ALLOW_ADMIN_REGISTRATION=false

